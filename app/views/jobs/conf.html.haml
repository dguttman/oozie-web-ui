%h1
  Job Configuration

= render :partial => 'job_actions'

.form  
  = form_tag url_for(:action => :edit_properties), :method => :put

  - @properties.each do |name, value|
    = label_tag name, name
    = text_field_tag "properties[#{name}]", value
    %br
  .clear
  / %br
  / = submit_tag "Save Changes", :class => "submit"
/ 
/ 
/ #conf.preformatted
/   ~ "<pre>#{h @job.conf}</pre>"